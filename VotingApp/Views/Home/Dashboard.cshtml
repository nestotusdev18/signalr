<script src="~/Scripts/jsx/dashboard.jsx?v2"></script>

 <script>
	$(document).ready(function () {
	
		setInterval(function() {
		 var vhub = $.connection.votingHub;
		  $.connection.hub.start().done(function () {
			vhub.server.send(1);
		 });
		
		}, 3000);

	});
</script>
